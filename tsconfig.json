{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@shortener/config/*": ["src/config/*"],
      "@shortener/core/*": ["src/modules/core/*"],
      "@shortener/shortener/*": ["src/modules/shortener/*"]
    }
  },
  "include": ["src", "./node_modules/@types/jest"],
  "exclude": ["node_modules", "dist", "coverage"],
  "types": [
    "@types/node",
    "@types/jest",
    "@types/dotenv"
  ]
}
